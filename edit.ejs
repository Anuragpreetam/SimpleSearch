<%- include("partials/header") %>
    <div class="ui main text container segment">
        <div class="ui huge header">Edit record</div>
        <form class = "ui form" action="/edit/<%= result._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Roll no</label>
                <input type="text" name="result[rollno]" value="<%=result.rollno%>" required>
            </div>
            <div class="field">
                <label>Name</label>
                <input type="text" name="result[name]" value="<%=result.name%>" required>
            </div>
            <div class="field">
                <label>Branch</label>
                <input type="text" name="result[branch]" value="<%=result.branch%>" required>
            </div>
            <div class="field">
                <label>Mobile number</label>
                <input type="text" name="result[mobile]" value="<%=result.mobile%>" required>
            </div>
            <input class="ui teal big basic button" type="submit">
        </form>
    </div>

<%- include("partials/footer") %>
